<odoo>
    <data>
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">university.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="email"/>
                            <field name="classroom_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
